{
	"compilerOptions": {
		"baseUrl": "./src",
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@calmdown/pyxis",
		"lib": [
			"DOM",
			"ESNext"
		],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"paths": {
			"~/*": [
				"*"
			]
		},
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": [],
		"verbatimModuleSyntax": true
	},
	"include": [
		"./src/**/*"
	]
}
