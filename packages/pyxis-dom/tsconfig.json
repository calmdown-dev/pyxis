{
	"compilerOptions": {
		"baseUrl": "./src",
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"paths": {
			"~/*": [
				"*"
			]
		},
		"skipLibCheck": true,
		"stripInternal": true,
		"strict": true,
		"target": "ESNext",
		"types": [],
		"verbatimModuleSyntax": true
	},
	"include": [
		"./src/**/*.ts"
	]
}
