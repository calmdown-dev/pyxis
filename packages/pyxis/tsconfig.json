{
	"compilerOptions": {
		"baseUrl": "./src",
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": [ "ESNext" ],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"paths": {
			"~/*": [ "*" ],
			"@calmdown/pyxis/core": [ "./exports/core.ts" ]
		},
		"skipLibCheck": true,
		"stripInternal": true,
		"strict": true,
		"target": "ESNext",
		"types": [],
		"verbatimModuleSyntax": true
	},
	"include": [
		"./src/**/*.ts"
	]
}
